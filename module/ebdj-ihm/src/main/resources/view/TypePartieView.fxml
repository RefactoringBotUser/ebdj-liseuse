<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import fr.qp1c.ebdj.view.component.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="800" minWidth="800" prefHeight="800.0" prefWidth="1024.0"
	style="-fx-background-color: #FFFFFF; -fx-border-radius: 12px;" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.qp1c.ebdj.controller.jeu.TypePartieController">
	<top>
		<VBox prefHeight="55.0" prefWidth="1024.0" BorderPane.alignment="CENTER">
			<children>
				<BorderPane>
					<center>
						<HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0"
							styleClass="panneauPhase" BorderPane.alignment="CENTER">
							<children>
								<ToggleButton fx:id="btn9PG" mnemonicParsing="false"
									onAction="#selectionnerVuePhase9PG" prefWidth="100.0" selected="true"
									styleClass="boutonPhase" text="9PG" textAlignment="CENTER">
									<toggleGroup>
										<ToggleGroup fx:id="phase" />
									</toggleGroup>
									<HBox.margin>
										<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
									</HBox.margin>
								</ToggleButton>
								<ToggleButton fx:id="btn4ALS" contentDisplay="CENTER"
									mnemonicParsing="false" onAction="#selectionnerVuePhase4ALS"
									prefWidth="100.0" styleClass="boutonPhase" text="4ALS"
									textAlignment="CENTER" toggleGroup="$phase">
									<HBox.margin>
										<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
									</HBox.margin>
								</ToggleButton>
								<ToggleButton fx:id="btnJD" contentDisplay="CENTER"
									mnemonicParsing="false" onAction="#selectionnerVuePhaseJD"
									prefWidth="100.0" styleClass="boutonPhase" text="JD"
									textAlignment="CENTER" toggleGroup="$phase">
									<HBox.margin>
										<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
									</HBox.margin>
								</ToggleButton>
								<ToggleButton fx:id="btnFAF" contentDisplay="CENTER"
									mnemonicParsing="false" onAction="#selectionnerVuePhaseFAF"
									prefWidth="100.0" styleClass="boutonPhase" text="FAF"
									textAlignment="CENTER" toggleGroup="$phase">
									<HBox.margin>
										<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
									</HBox.margin>
								</ToggleButton>
							</children>
						</HBox>
					</center>
					<right>
						<Chronometre fx:id="chronometre" styleClass="chronometre" alignment="CENTER"
							prefWidth="200.0">
							<BorderPane.margin>
								<Insets bottom="10.0" right="10.0" top="10.0" />
							</BorderPane.margin>
						</Chronometre>
					</right>
					<left>
						<HBox alignment="CENTER" prefHeight="50.0" prefWidth="300.0"
							styleClass="panneauPhase" BorderPane.alignment="CENTER">
							<children>

								<Button fx:id="btnHome" alignment="CENTER"
									contentDisplay="CENTER" mnemonicParsing="false" onAction="#retournerEcranHome"
									styleClass="boutonHome" textAlignment="CENTER">
									<HBox.margin>
										<Insets left="15.0" />
									</HBox.margin>
								</Button>
								<UtilisateurPane fx:id="utilisateurPane" prefWidth="300">
									<BorderPane.margin>
										<Insets bottom="10.0" right="10.0" top="10.0" />
									</BorderPane.margin>
								</UtilisateurPane>
							</children>
						</HBox>
					</left>
				</BorderPane>
				<Separator prefWidth="200.0" />
			</children>
		</VBox>
	</top>
	<center>
		<BorderPane fx:id="content" BorderPane.alignment="TOP_CENTER" />
	</center>
</BorderPane>
